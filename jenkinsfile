pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from the Git repository
                script {
                    checkout scm
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install Node.js and npm using Node Version Manager (NVM)
                script {
                    def nodejsHome = tool 'NodeJS'
                    env.PATH = "${nodejsHome}/bin:${env.PATH}"
                    sh 'npm install'
                }
            }
        }


        stage('Build') {
            steps {
                // Build the React app using npm run build
                script {
                    sh 'npm run build'
                }
            }
        }
    }

    post {
        success {
            // If the pipeline succeeds, you might want to deploy the app or perform additional actions
            echo 'Build successful! Deploy the app or perform additional actions.'
        }
        failure {
            // If the pipeline fails, you might want to notify someone or take corrective actions
            echo 'Build failed! Notify someone or take corrective actions.'
        }
    }
}
